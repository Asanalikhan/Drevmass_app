<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_btn_20"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:paddingVertical="13dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvMyData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:text="Мои данные"
                android:drawableStart="@drawable/ic_data_24"
                android:fontFamily="@font/sf_text_semibold"
                android:textColor="@color/color_dark_1000"
                android:textSize="17sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_right_16"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:paddingVertical="13dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvChangePassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/ic_lock_24"
                android:text="Сменить пароль"
                android:fontFamily="@font/sf_text_semibold"
                android:textColor="@color/color_dark_1000"
                android:textSize="17sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_right_16"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/flNotification"
            android:layout_width="match_parent"
            android:paddingVertical="13dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="12dp"
                android:drawableStart="@drawable/ic_notif_24"
                android:text="Уведомления"
                android:fontFamily="@font/sf_text_semibold"
                android:textColor="@color/color_dark_1000"
                android:textSize="17sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_right_16"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>