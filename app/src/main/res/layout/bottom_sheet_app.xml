<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_view_24"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="О приложении"
        android:layout_marginTop="11dp"
        android:textColor="@color/color_dark_1000"
        android:textSize="17sp"
        android:fontFamily="@font/sf_text_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/color_blue_1000"
        android:text="Закрыть"
        android:layout_margin="12dp"
        android:fontFamily="@font/sf_text_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:src="@drawable/png_app"
        android:layout_marginTop="91dp"
        app:layout_constraintTop_toBottomOf="@id/tvClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedCornersImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Древмасс"
        android:textColor="@color/color_dark_900"
        android:textSize="22sp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/sf_display_bold"
        app:layout_constraintTop_toBottomOf="@id/iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Версия 1.0.4"
        android:textColor="@color/color_gray_800"
        android:textSize="15sp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/sf_text_regular"
        app:layout_constraintTop_toBottomOf="@id/iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© 2023 Name, Inc\nВсе права защищены"
        android:textColor="@color/color_gray_800"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/sf_text_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>