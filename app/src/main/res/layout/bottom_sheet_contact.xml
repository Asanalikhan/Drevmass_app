<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_view_24"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/background_view_13"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_dark_1000"
        android:text="Связаться с нами"
        android:textSize="20dp"
        android:layout_margin="24dp"
        android:fontFamily="@font/sf_display_semibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvCall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Позвонить"
        android:textColor="@color/color_dark_900"
        android:fontFamily="@font/sf_text_semibold"
        android:drawableStart="@drawable/ic_phone_32"
        android:gravity="center|start"
        android:drawablePadding="12dp"
        android:background="@drawable/bg_btn_20"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="72dp"
        android:paddingVertical="21dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvHelp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Служба поддержки"
        android:textColor="@color/color_dark_900"
        android:fontFamily="@font/sf_text_semibold"
        android:drawableStart="@drawable/ic_message_32"
        android:gravity="center|start"
        android:drawablePadding="12dp"
        android:background="@drawable/bg_btn_20"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:paddingVertical="21dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvCall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvWhatsapp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="WhatsApp"
        android:textColor="@color/color_dark_900"
        android:drawableStart="@drawable/ic_whatsapp_32"
        android:gravity="center|start"
        android:drawablePadding="12dp"
        android:fontFamily="@font/sf_text_semibold"
        android:background="@drawable/bg_btn_20"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        android:paddingVertical="21dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvHelp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvWhatsapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>