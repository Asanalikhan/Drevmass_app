<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/FullHeightBottomSheet</item>
    </style>

    <style name="FullHeightBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_height">match_parent</item>
        <item name="behavior_peekHeight">600dp</item>
    </style>

    <style name="RoundedCornersImageHorizontal">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RoundedCornersImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">56dp</item>
    </style>

    <style name="FieldLayout">
        <item name="errorIconDrawable">@null</item>
        <item name="hintEnabled">true</item>
        <item name="boxStrokeColor">@color/box_stroke_color</item>
        <item name="hintTextColor">@color/box_stroke_color</item>
        <item name="errorTextColor">@color/color_coral_1000</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="endIconMode">clear_text</item>
        <item name="cursorColor">@color/color_dark_1000</item>
        <item name="boxBackgroundColor">@color/color_white_1000</item>
    </style>

    <style name="FieldET">
        <item name="fontFamily">@font/sf_text_semibold</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textColor">@color/color_dark_1000</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="FieldPassword">
        <item name="errorIconDrawable">@null</item>
        <item name="hintEnabled">true</item>
        <item name="boxStrokeColor">@color/box_stroke_color</item>
        <item name="hintTextColor">@color/box_stroke_color</item>
        <item name="errorTextColor">@color/color_coral_1000</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="android:inputType">textPassword</item>
        <item name="endIconMode">password_toggle</item>
        <item name="cursorColor">@color/color_dark_1000</item>
        <item name="boxBackgroundColor">@color/color_white_1000</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="bottomSheetStyle">@drawable/bg_bottom_sheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="hintEnabled">true</item>
        <item name="android:topLeftRadius">15dp</item>
        <item name="android:topRightRadius">15dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="colorPrimary">@color/color_white_1000</item>
        <item name="colorPrimaryVariant">@color/color_dark_1000</item>
        <item name="backgroundColor">@color/color_dark_1000</item>
        <item name="colorButtonNormal">@color/color_dark_1000</item>
        <item name="strokeColor">@color/color_dark_1000</item>
        <item name="track">@color/color_dark_1000</item>
        <!-- Text -->
        <item name="colorOnPrimary">@color/color_dark_1000</item>
        <!-- Secondary brand color. -->


        <item name="colorSecondary">@color/color_dark_1000</item>
        <item name="colorSecondaryVariant">@color/primary_50</item>
        <item name="seekBarStyle">@color/primary_500</item>
        <item name="colorOnSecondary">@color/color_dark_1000</item>
        <item name="colorSwitchThumbNormal">@color/color_gray_400</item>
        <!-- Status bar color. -->
        <item name="iconTint">@color/color_gray_800</item>

    </style>
</resources>